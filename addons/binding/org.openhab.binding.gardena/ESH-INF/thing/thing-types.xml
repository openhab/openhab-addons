	<!-- ############################### Pressure Pump ############################### -->

	<thing-type id="electronic_pressure_pump">
		<supported-bridge-type-refs>
			<bridge-type-ref id="account" />
		</supported-bridge-type-refs>

		<label>Gardena Smart Pressure Pump</label>
		<description>Represents a Gardena Smart Pressure Pump</description>

		<channel-groups>
			<channel-group id="device_info" typeId="deviceInfo" />
			<channel-group id="radio" typeId="radio" />

			<channel-group id="outlet_temperature" typeId="outletTemperature" />
			<channel-group id="pump" typeId="pump" />
			<channel-group id="outlet_pressure" typeId="outletPressure" />
			<channel-group id="flow" typeId="flow" />
			<channel-group id="manual_watering" typeId="manualWatering" />
			<channel-group id="scheduling" typeId="scheduling" />
		</channel-groups>

		<properties>
			<!-- device info -->
			<property name="manufacturer" />
			<property name="product" />
			<property name="serialNumber" />
			<property name="sgtin" />
			<property name="version" />
			<property name="category" />
		</properties>

		<config-description>
			<parameter name="leakage_detection" type="text">
				<label>Leakage Detection</label>
				<options>
					<option value="watering">Watering</option>
					<option value="washing_machine">Washing machine</option>
					<option value="domestic_water_supply">Domestic water supply</option>
					<option value="off">Off</option>
				</options>
			</parameter>
			<parameter name="operating_mode" type="text">
				<label>Operating Mode</label>
				<options>
					<option value="scheduled">Scheduled</option>
					<option value="automatic">Automatic</option>
				</options>
			</parameter>
			<parameter name="turn_on_pressure" type="text">
				<label>Turn on pressure</label>
				<options>
					<option value="2.0">2.0</option>
					<option value="2.2">2.2</option>
					<option value="2.4">2.4</option>
					<option value="2.6">2.6</option>
					<option value="2.8">2.8</option>
				</options>
			</parameter>
		</config-description>
	</thing-type>

	<channel-group-type id="outletTemperature">
		<label>Outlet Temperature</label>
		<description>The outlet temperature</description>
		<channels>
			<channel id="temperature" typeId="temperature" />
			<channel id="temperature_min" typeId="temperatureMin" />
			<channel id="temperature_max" typeId="temperatureMax" />

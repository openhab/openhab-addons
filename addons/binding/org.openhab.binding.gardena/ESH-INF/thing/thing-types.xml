		<description>The pump</description>
		<channels>
			<channel id="mode" typeId="pumpMode" />
			<channel id="pump_on_off" typeId="pumpOnOff" />
			<channel id="turn_on_pressure" typeId="turnOnPressure" />
			<channel id="operating_mode" typeId="operatingMode" />
			<channel id="error" typeId="errorCounter" />

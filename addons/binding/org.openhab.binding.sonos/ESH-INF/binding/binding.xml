<?xml version="1.0" encoding="UTF-8"?>
<binding:binding id="sonos"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:binding="http://eclipse.org/smarthome/schemas/binding/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/binding/v1.0.0 http://eclipse.org/smarthome/schemas/binding-1.0.0.xsd">

	<name>Sonos Binding</name>
	<description>This is the binding for the Sonos multi-room audio system.</description>
	<author>Karel Goderis</author>

	<config-description>
		<parameter name="opmlPartnerID" type="text">
			<label>OPML Partner ID</label>
			<description>ID for the OPML/tunein.com service</description>
			<required>true</required>
			<default>IAeIhU42</default>
		</parameter>

	</config-description>

</binding:binding>

<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="lgwebos" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

	<thing-type id="WebOSTV">
		<label>WebOS TV</label>
		<description>WebOS based smart TV</description>

		<channels>
			<channel id="power" typeId="commandType">
				<label>Power</label>
				<description>Via this binding TV can only be powered off, not on.</description>
			</channel>
			<channel id="mute" typeId="commandType">
				<label>Mute</label>
				<description>Current Mute Setting</description>
			</channel>
			<channel id="volume" typeId="volumeChannelType" />
			<channel id="channel" typeId="channelChannelType" />
			<channel id="channelUp" typeId="commandType">
				<label>Channel Up</label>
				<description>One Channel Up</description>
			</channel>
			<channel id="channelDown" typeId="commandType">
				<label>Channel Down</label>
				<description>One Channel Down</description>
			</channel>
			<channel id="channelName" typeId="channelNameChannelType" />
			<channel id="toast" typeId="toastChannelType" />
			<channel id="mediaPlayer" typeId="mediaPlayerType" />
			<channel id="mediaStop" typeId="commandType">
                <label>Stop</label>
            </channel>
			<channel id="appLauncher" typeId="appLauncherChannelType" />
		</channels>

		<!-- property as IP must not be changed -->
		<properties>
			<property name="IP" />
		</properties>
	</thing-type>

	<!-- Channel Types -->
	<channel-type id="commandType">
		<item-type>Switch</item-type>
		<label>Command</label>
		<description>Used to send ON commands to trigger an action. Or send ON and OFF commands to toggle state. Similar to buttons on a remote control.</description>
	</channel-type>
	<channel-type id="volumeChannelType">
		<item-type>Dimmer</item-type>
		<label>Volume</label>
		<description>Current Volume Setting</description>
		<state min="0" max="100" step="1"></state>
	</channel-type>
	<channel-type id="channelChannelType">
		<item-type>String</item-type>
		<label>Channel Number</label>
		<description>Current Channel Setting</description>
	</channel-type>
	<channel-type id="toastChannelType">
		<item-type>String</item-type>
		<label>Toast</label>
	</channel-type>
	<channel-type id="channelNameChannelType">
		<item-type>String</item-type>
		<label>Channel Name</label>
		<description>Current Channel Name</description>
		<state readOnly="true" />
	</channel-type>
	<channel-type id="mediaPlayerType">
	   <item-type>Player</item-type>
	   <label>Media Control</label>
	   <description>Control media (e.g. audio or video) playback</description>
	</channel-type>
	<channel-type id="appLauncherChannelType">
		<item-type>String</item-type>
		<label>Application</label>
		<description>Start application and monitor running applications.</description>
	</channel-type>

</thing:thing-descriptions>

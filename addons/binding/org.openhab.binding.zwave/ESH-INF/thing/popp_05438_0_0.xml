<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
  xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0
                      http://eclipse.org/smarthome/schemas/thing-description/v1.0.0">

  <thing-type id="popp_05438_00_000" listed="false">
    <label>05438 Indoor/Outdoor Wall Plug Switch</label>
    <description>Indoor/Outdoor Wall Plug Switch</description>

    <!-- CHANNEL DEFINITIONS -->
    <channels>
      <channel id="meter_kwh" typeId="meter_kwh">
        <label>Electric meter (kWh)</label>
        <properties>
          <property name="binding:*:DecimalType">METER;type=E_KWh</property>
        </properties>
      </channel>
      <channel id="meter_watts" typeId="meter_watts">
        <label>Electric meter (watts)</label>
        <properties>
          <property name="binding:*:DecimalType">METER;type=E_W</property>
        </properties>
      </channel>
      <channel id="switch_binary" typeId="switch_binary">
        <label>Switch</label>
        <properties>
          <property name="binding:*:OnOffType">SWITCH_BINARY</property>
        </properties>
      </channel>
    </channels>

    <!-- DEVICE PROPERTY DEFINITIONS -->
    <properties>
      <property name="vendor">POPP</property>
      <property name="model">05438</property>
      <property name="manufacturerId">0154</property>
      <property name="manufacturerRef">0003:0001</property>
      <property name="defaultAssociations">1</property>
    </properties>

    <!-- CONFIGURATION DESCRIPTIONS -->
    <config-description>

      <!-- PARAMETER DEFINITIONS -->
      <parameter-group name="configuration">
        <context>setup</context>
        <label>Configuration Parameters</label>
      </parameter-group>

      <parameter name="config_1_1" type="integer" groupName="configuration">
        <label>1: LED indication mode</label>
        <description>Set LED indication mode.</description>
        <default>1</default>
        <options>
          <option value="0">Disabled</option>
          <option value="1">Show switch state (default)</option>
          <option value="2">Operated by Indicator Command Class</option>
        </options>
      </parameter>

      <parameter name="config_2_1" type="integer" groupName="configuration"
                 min="0" max="255">
        <label>2: Automatically switch off after x seconds.</label>
        <description><![CDATA[
If not zero, automatically switch device off after a user defined time.<br /> 0 -&gt; Disabled<br /> 1-65535 -&gt; Enabled, seconds
        ]]></description>
        <default>0</default>
      </parameter>

      <parameter name="config_3_1" type="integer" groupName="configuration">
        <label>3: What to do on RF off command.</label>
        <description><![CDATA[
Defines how to interpret RF Off command.<br /> Can be used in conjunction with Auto Off function:<br /> Ignore - to switch on the light by motion detectors and switch it off after some amount of time:<br /> in case of multiple motion detectors ea
        ]]></description>
        <default>0</default>
        <options>
          <option value="0">Switch off (default)</option>
          <option value="1">Ignore</option>
          <option value="2">Switch on</option>
          <option value="3">Switch on if load is off, else switch off</option>
        </options>
      </parameter>

      <parameter name="config_5_1" type="integer" groupName="configuration">
        <label>5: Restore switch state after power cycle.</label>
        <description><![CDATA[
Defines if the switch should restore switch state to the last state prior<br /> to device power off (power cycle).
        ]]></description>
        <default>1</default>
        <options>
          <option value="0">No, turn off</option>
          <option value="1">Yes, default</option>
        </options>
      </parameter>

      <parameter name="config_20_2" type="integer" groupName="configuration"
                 min="0" max="3500">
        <label>20: Specify the consumption of the load in watts, for the calculation of power consumption.</label>
        <description><![CDATA[
Max load 3500 W.<br /><h1>Overview</h1><ul><li>0 -&gt; Disabled</li> <li>1 - 3500 -&gt; Watts</li> </ul>
        ]]></description>
        <default>0</default>
      </parameter>

      <parameter name="config_21_1" type="integer" groupName="configuration">
        <label>21: LED Off color</label>
        <description>Color for Off state.</description>
        <default>0</default>
        <options>
          <option value="0">Off</option>
          <option value="1">Red</option>
          <option value="2">Green</option>
          <option value="3">Blue</option>
          <option value="4">Yellow</option>
        </options>
      </parameter>

      <parameter name="config_22_1" type="integer" groupName="configuration">
        <label>22: LED On color.</label>
        <description>Color for On state.</description>
        <default>3</default>
        <options>
          <option value="0">Off</option>
          <option value="1">Red</option>
          <option value="2">Green</option>
          <option value="3">Blue</option>
          <option value="4">Yellow</option>
        </options>
      </parameter>

      <!-- ASSOCIATION DEFINITIONS -->
      <parameter-group name="association">
        <context>link</context>
        <label>Association Groups</label>
      </parameter-group>

      <parameter name="group_1" type="text" groupName="association" multiple="true">
        <label>1: Send Reports on switch state change.</label>
        <multipleLimit>5</multipleLimit>
      </parameter>

      <parameter name="group_2" type="text" groupName="association" multiple="true">
        <label>2: Controlled by buttons</label>
        <multipleLimit>5</multipleLimit>
      </parameter>

    </config-description>

  </thing-type>
</thing:thing-descriptions>

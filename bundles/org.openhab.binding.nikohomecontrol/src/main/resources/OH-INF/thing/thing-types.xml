			<parameter name="refresh" type="integer">
				<label>@text/bridgeConfigRefreshLabel</label>
				<description>@text/bridge2ConfigRefreshDescription</description>
				<default>300</default>
				<advanced>true</advanced>
			</parameter>
		</config-description>

				<label>@text/deviceConfigDeviceIdLabel</label>
				<description>@text/deviceConfigDeviceIdDescription</description>
			</parameter>
			<parameter name="overruleTime" type="integer">
				<label>@text/thermostatConfigOverruleTimeLabel</label>

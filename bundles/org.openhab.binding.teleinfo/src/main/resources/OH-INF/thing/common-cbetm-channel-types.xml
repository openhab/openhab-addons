		<state pattern="%d %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="iinst3Type">
		<item-type>Number:ElectricCurrent</item-type>
		<label>IINST3</label>
		<description>Instantaneous electric current on phase 3</description>
		<category>Energy</category>
		<state pattern="%d %unit%" readOnly="true"/>
	</channel-type>


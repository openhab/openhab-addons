			</channel>
			<channel id="avalanches" typeId="alert-level">
				<label>Etat Avalanches</label>
			</channel>
			<channel id="vague-submersion-icon" typeId="condition-icon">
				<label>Icône Vague Submersion</label>
			</channel>
			<channel id="vent-icon" typeId="condition-icon">

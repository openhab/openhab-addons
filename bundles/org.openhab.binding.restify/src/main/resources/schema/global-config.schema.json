{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.openhab.org/addons/RESTify/global-config.schema.json",

  "type": "object",

  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+$"
    },
    "authentication": {
      "type": "object",
      "properties": {
        "userNamePasswords": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },

  "required": ["version"],
  "additionalProperties": false
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.openhab.org/addons/RESTify/endpoint.schema.json",
  "type": "object",
  "properties": {
    "authorization": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": { "type": "string", "pattern": "^[Bb][Aa][Ss][Ii][Cc]$" },
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "required": ["type", "username", "password"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "type": { "type": "string", "pattern": "^[Bb][Ee][Aa][Rr][Ee][Rr]$" },
            "token": { "type": "string" }
          },
          "required": ["type", "token"],
          "additionalProperties": false
        }
      ]
    },
    "response": {
      "type": "object"
    }
  },
  "required": ["response"],
  "additionalProperties": false
}

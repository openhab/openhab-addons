	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="occupancy-sensor">
		<supported-bridge-type-refs>
			<bridge-type-ref id="gateway"/>
		</supported-bridge-type-refs>

		<label>Occupancy Sensor</label>
		<description>Sensor to detect motion</description>

		<config-description-ref uri="thing-type:dirigera:base-device"/>
	</thing-type>

	<thing-type id="occupancy-light-sensor">
		<supported-bridge-type-refs>
			<bridge-type-ref id="gateway"/>
		</supported-bridge-type-refs>

		<label>Occupancy Light Sensor</label>
		<description>Sensor to detect motion and measures illuminance</description>

		<config-description-ref uri="thing-type:dirigera:base-device"/>
	</thing-type>

	<thing-type id="light-sensor">
		<supported-bridge-type-refs>
			<bridge-type-ref id="gateway"/>
		</supported-bridge-type-refs>

		<label>Light Sensor</label>
		<description>Sensor providing illuminance measures</description>

		<config-description-ref uri="thing-type:dirigera:base-device"/>
	</thing-type>

	<thing-type id="environment-sensor">
		<supported-bridge-type-refs>
			<bridge-type-ref id="gateway"/>
		</supported-bridge-type-refs>

		<label>Environment Sensor</label>
		<description>Sensor measuring temperature, humidity and pollution. Measuring capabilities depends on hardware</description>

		<config-description-ref uri="thing-type:dirigera:base-device"/>
	</thing-type>

	<thing-type id="open-close-sensor">
		<supported-bridge-type-refs>
			<bridge-type-ref id="gateway"/>
		</supported-bridge-type-refs>

		<label>Open Close Sensor</label>

	<!-- Power Channel Type -->
	<channel-type id="Pbat">
		<item-type unit="W">Number</item-type>
		<label>Power</label>
		<state readOnly="true" pattern="%.2f %unit%"/>
	</channel-type>
	<!-- State of charge Channel Type -->
	<channel-type id="SOC">
		<item-type>Number:Dimensionless</item-type>
		<label>State of Charge</label>
		<state readOnly="true" pattern="%.2f %unit%"/>
	</channel-type>

<?xml version="1.0" encoding="UTF-8"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.4.0" name="org.openhab.binding.emby-${project.version}">
	<!-- link to the core openHAB Karaf features -->
	<repository>
		mvn:org.openhab.core.features.karaf/org.openhab.core.features.karaf.openhab-core/${ohc.version}/xml/features
	</repository>

	<feature name="openhab-binding-emby" version="${project.version}" description="openHAB Emby Binding">
		<!-- base runtime feature -->
		<feature>openhab-runtime-base</feature>

		<!-- external dependencies -->
		<bundle start-level="80">mvn:com.google.code.gson/gson/2.11.0</bundle>

		<!-- the Emby binding bundle itself -->
		<bundle start-level="80">
			mvn:org.openhab.addons.bundles/org.openhab.binding.emby/${project.version}
		</bundle>
	</feature>
</features>

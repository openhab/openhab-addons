<?xml version="1.0" encoding="UTF-8"?>
<config-description:config-descriptions
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:config-description="https://openhab.org/schemas/config-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/config-description/v1.0.0 https://openhab.org/schemas/config-description-1.0.0.xsd">

	<config-description uri="thing-type:inverter:modbusconfig">

		<parameter name="refresh" type="integer" min="0" unit="s">
			<label>Refresh Interval</label>
			<description>Poll interval. Use zero to disable automatic polling.</description>
			<default>1</default>
		</parameter>

		<parameter name="inputAddress" type="integer" min="0" max="65535">
			<label>Input Register Address</label>
			<description>Start address of the input (function 3) register block</description>
			<default>1025</default>
			<advanced>false</advanced>
		</parameter>

		<parameter name="inputBlockLength" type="integer" min="1" max="65535">
			<label>Input Block Length</label>
			<description>Length of the modbus input (function 3) block in 2 byte words (modbus registers)</description>
			<default>53</default>
			<advanced>false</advanced>
		</parameter>

		<parameter name="maxTries" type="integer" min="1">
			<label>Maximum Tries When Reading</label>
			<default>3</default>
			<description>Number of tries when reading data, if some of the reading fail. For single try, enter 1.</description>
			<advanced>true</advanced>
		</parameter>

		<parameter name="holdingAddress" type="integer">
			<label>Holding Register Address</label>
			<description>Start address of the holding (function 4) register block</description>
			<default>769</default>
		</parameter>

		<parameter name="holdingBlockLength" type="integer" min="1" max="65535">
			<label>Holding Block Length</label>
			<description>Length of the modbus holding (function 4) block in 2 byte words (modbus registers)</description>
			<default>61</default>
		</parameter>

	</config-description>

	<config-description uri="channel-type:inverter:channel-config">

		<parameter name="registerNumber" type="integer">
			<label>Modbus Register number</label>
			<description>This value is absolute modbus register number starting from 0. It must be within the range specified in
				thing configuration as address till address + length.</description>
		</parameter>

		<parameter name="registerFunction" type="integer" min="3" max="4">
			<label>Modbus Register function</label>
			<description>This value is designation of modbus function for obtaining value for this channel. Possible functions
				are 3 - input and 4 - holding</description>
			<default>3</default>
		</parameter>

		<parameter name="registerType" type="text">
			<label>Type of Register</label>
			<options>
				<option value="SHORT">Short 16 bit</option>
				<option value="USHORT">Unsigned Short 16 bit</option>
				<option value="INT">Integer 32 bit</option>
			</options>
			<limitToOptions>true</limitToOptions>
			<default>SHORT</default>
		</parameter>

		<parameter name="registerUnit" type="text">
			<label>Unit of Register</label>
			<options>
				<option value="AMPERE">Ampere</option>
				<option value="VOLT">Volt</option>
				<option value="WATT">Watt</option>
				<option value="CELCIUS">Celcius</option>
				<option value="STATUS">Status special register</option>
				<option value="HERTZ">Hertz</option>
				<option value="KILOWATT_HOUR">Kilowatt*Hour</option>
			</options>
			<limitToOptions>false</limitToOptions>
			<default>WATT</default>
		</parameter>
	</config-description>
</config-description:config-descriptions>

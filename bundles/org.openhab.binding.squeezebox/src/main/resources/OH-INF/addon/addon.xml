<?xml version="1.0" encoding="UTF-8"?>
<addon:addon id="squeezebox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:addon="https://openhab.org/schemas/addon/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/addon/v1.0.0 https://openhab.org/schemas/addon-1.0.0.xsd">

	<type>binding</type>
	<name>SqueezeBox Binding</name>
	<description>This is the binding for the Logitech Squeeze Server and Players.</description>
	<connection>local</connection>

	<config-description>
		<parameter name="callbackUrl" type="text">
			<label>Callback URL</label>
			<description>URL to use for playing notification sounds, e.g. http://192.168.0.2:8080</description>
		</parameter>
	</config-description>

	<discovery-methods>
		<discovery-method>
			<service-type>upnp</service-type>
			<match-properties>
				<match-property>
					<name>modelName</name>
					<regex>Logitech Media Server</regex>
				</match-property>
			</match-properties>
		</discovery-method>
	</discovery-methods>

</addon:addon>

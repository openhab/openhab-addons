<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="playstation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="PS3">
		<label>PlayStation 3</label>
		<description>Sony PlayStation 3 console.</description>

		<channels>
			<channel id="power" typeId="power-channel"/>
		</channels>

		<properties>
			<property name="vendor">Sony</property>
			<property name="modelId">PlayStation 3</property>
		</properties>
		<representation-property>deviceId</representation-property>
		<config-description-ref uri="thing-type:playstation:PS3"/>

	</thing-type>

	<thing-type id="PS4">
		<label>PlayStation 4</label>
		<description>Sony PlayStation 4 console.</description>

		<channels>
			<channel id="power" typeId="power-channel"/>
			<channel id="applicationName" typeId="application-channel"/>
			<channel id="applicationId" typeId="applicationId-channel"/>
			<channel id="applicationImage" typeId="applicationImage-channel"/>
			<channel id="oskText" typeId="oskText-channel"/>
			<channel id="disconnect" typeId="disconnect-channel"/>
			<channel id="keyUp" typeId="keyUp-channel"/>
			<channel id="keyDown" typeId="keyDown-channel"/>
			<channel id="keyRight" typeId="keyRight-channel"/>
			<channel id="keyLeft" typeId="keyLeft-channel"/>
			<channel id="keyEnter" typeId="keyEnter-channel"/>
			<channel id="keyBack" typeId="keyBack-channel"/>
			<channel id="keyOption" typeId="keyOption-channel"/>
			<channel id="keyPS" typeId="keyPS-channel"/>
			<channel id="secondScreen" typeId="secondScreen-channel"/>
		</channels>

		<properties>
			<property name="vendor">Sony</property>
			<property name="modelId">PlayStation 4</property>
		</properties>
		<representation-property>deviceId</representation-property>
		<config-description-ref uri="thing-type:playstation:PS4"/>

	</thing-type>

	<channel-type id="power-ps3-channel">
		<item-type>Switch</item-type>
		<label>PlayStation 3 Power</label>
		<description>Shows if PlayStation 3 is on or off.</description>
		<tags>
			<tag>Switchable</tag>
		</tags>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="power-channel">
		<item-type>Switch</item-type>
		<label>PlayStation 4 Power</label>
		<description>Shows if PlayStation 4 is on or in standby/off.</description>
		<tags>
			<tag>Switchable</tag>
		</tags>
	</channel-type>
	<channel-type id="application-channel">
		<item-type>String</item-type>
		<label>Application</label>
		<description>Name of the currently running application.</description>
		<state pattern="%s" readOnly="true"/>
	</channel-type>
	<channel-type id="applicationId-channel">
		<item-type>String</item-type>
		<label>Application ID</label>
		<description>ID of the currently running application.</description>
		<category>MediaControl</category>
	</channel-type>
	<channel-type id="applicationImage-channel">
		<item-type>Image</item-type>
		<label>Artwork</label>
		<description>Application artwork.</description>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="oskText-channel" advanced="true">
		<item-type>String</item-type>
		<label>OSK Text</label>
		<description>The text from the OnScreenKeyboard.</description>
	</channel-type>
	<channel-type id="disconnect-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Disconnect</label>
		<description>Disconnect from PS4.</description>
	</channel-type>
	<channel-type id="keyUp-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Up button</label>
		<description>Push Up button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="keyDown-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Down button</label>
		<description>Push Down button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="keyRight-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Right button</label>
		<description>Push Right button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="keyLeft-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Left button</label>
		<description>Push Left button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="keyEnter-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Enter button</label>
		<description>Push Enter button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="keyBack-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Back button</label>
		<description>Push Back button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="keyOption-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>Option button</label>
		<description>Push Option button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="keyPS-channel" advanced="true">
		<item-type>Switch</item-type>
		<label>PS button</label>
		<description>Push PS button.</description>
		<category>MoveControl</category>
	</channel-type>
	<channel-type id="secondScreen-channel" advanced="true">
		<item-type>String</item-type>
		<label>Second screen</label>
		<description>Link to 2ndScreen HTTP server.</description>
		<state pattern="%s" readOnly="true"/>
	</channel-type>

</thing:thing-descriptions>

<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="evcc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">
	<thing-type id="forecast" listed="false">
		<supported-bridge-type-refs>
			<bridge-type-ref id="server"/>
		</supported-bridge-type-refs>
		<label>Forecast</label>
		<description>A forecast configured in your evcc instance</description>
		<representation-property>id</representation-property>
		<config-description>
			<parameter name="subType" type="text">
				<label>Type</label>
				<description>Forecast type (solar, co2, feedin, grid)</description>
			</parameter>
		</config-description>
	</thing-type>
	<channel-type id="forecast-solar">
		<item-type unitHint="Wh">Number:Energy</item-type>
		<label>Solar Forecast</label>
		<description>Holds the solar forecast data</description>
		<tags>
			<tag>Forecast</tag>
			<tag>Energy</tag>
		</tags>
		<state pattern="%.0f %unit%" readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-co2">
		<item-type>Number:EmissionIntensity</item-type>
		<label>CO2 Forecast</label>
		<description>Holds the CO2 forecast data</description>
		<tags>
			<tag>Forecast</tag>
			<tag>CO2</tag>
		</tags>
		<state pattern="%.0f %unit%" readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-feedin">
		<item-type>Number:EnergyPrice</item-type>
		<label>Feed In Forecast</label>
		<description>Holds the feed in forecast data</description>
		<tags>
			<tag>Forecast</tag>
			<tag>Price</tag>
		</tags>
		<state pattern="%.2f %unit%" readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-grid">
		<item-type>Number:EnergyPrice</item-type>
		<label>Grid Forecast</label>
		<description>Holds the grid forecast data</description>
		<tags>
			<tag>Forecast</tag>
			<tag>Price</tag>
		</tags>
		<state pattern="%.2f %unit%" readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-scaled">
		<item-type unitHint="Wh">Number:Energy</item-type>
		<label>Scaled Solar Forecast</label>
		<description>Holds the scaled solar forecast data</description>
		<tags>
			<tag>Forecast</tag>
			<tag>Calculation</tag>
		</tags>
		<state pattern="%.0f %unit%" readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-scale">
		<item-type>Number</item-type>
		<label>Scale</label>
		<description>Scaling factor for the forecast values</description>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-today">
		<item-type unitHint="Wh">Number:Energy</item-type>
		<label>Today's Forecast</label>
		<description>Accumulated forecast for today</description>
		<tags>
			<tag>Forecast</tag>
			<tag>Energy</tag>
		</tags>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-tomorrow">
		<item-type unitHint="Wh">Number:Energy</item-type>
		<label>Tomorrow's Forecast</label>
		<description>Accumulated forecast for tomorrow</description>
		<tags>
			<tag>Forecast</tag>
			<tag>Energy</tag>
		</tags>
		<state readOnly="true"/>
	</channel-type>
	<channel-type id="forecast-day-after-tomorrow">
		<item-type unitHint="Wh">Number:Energy</item-type>
		<label>After Tomorrow's Forecast</label>
		<description>Accumulated forecast for the day after tomorrow</description>
		<tags>
			<tag>Forecast</tag>
			<tag>Energy</tag>
		</tags>
		<state readOnly="true"/>
	</channel-type>
</thing:thing-descriptions>

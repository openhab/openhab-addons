				<option value="MAX">Maximum</option>
			</options>
			<default>MIN</default>
		</parameter>
		<parameter name="period" type="text">
			<label>Period</label>
            <description>Observation period for searched boundary.</description>
			<options>
				<option value="30min">30 minutes</option>

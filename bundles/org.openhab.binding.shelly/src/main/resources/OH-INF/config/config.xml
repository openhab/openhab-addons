	<config-description uri="thing-type:shelly:relay">
		<parameter name="deviceIp" type="text" required="true">
			<label>IP Address</label>
			<description>IP Address of the Shelly device</description>
			<context>network-address</context>
		</parameter>
		<parameter name="userId" type="text" required="false">
			<label>User ID</label>
			<description>User ID for API access</description>
		</parameter>
		<parameter name="password" type="text" required="false">
			<label>Password</label>
			<description>Password for API access</description>
			<context>password</context>
		</parameter>
		<parameter name="eventsButton" type="boolean" required="false">
			<label>Button Events</label>
			<description>Activates the Button Action URLS</description>
			<advanced>true</advanced>
			<default>false</default>
		</parameter>
		<parameter name="eventsSwitch" type="boolean" required="false">
			<label>Output Events</label>
			<description>Activates the Output Action URLS</description>
			<advanced>true</advanced>
			<default>false</default>
		</parameter>
		<parameter name="eventsPush" type="boolean" required="false">
			<label>Push Events</label>
			<description>Activates the Push Button Action URLS</description>
			<advanced>true</advanced>
			<default>false</default>
		</parameter>
		<parameter name="eventsCoIoT" type="boolean" required="false">
			<label>Activate CoIoT</label>
			<description>Activates the CoIoT-Protocol (CoAP based)</description>
			<default>true</default>
			<advanced>true</advanced>
		</parameter>
		<parameter name="updateInterval" type="integer" min="10" required="true" unit="s">
			<label>Status Interval</label>
			<description>Interval for the device status update</description>
			<default>60</default>
			<unitLabel>seconds</unitLabel>
			<advanced>true</advanced>
		</parameter>
	</config-description>


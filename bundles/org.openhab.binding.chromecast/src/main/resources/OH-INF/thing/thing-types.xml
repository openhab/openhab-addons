			<!-- Media Info -->
			<channel id="currentTime" typeId="currentTime"/>
			<channel id="duration" typeId="duration"/>

			<!-- Metadata Info -->
			<channel id="metadataType" typeId="metadataType"/>
			<channel id="albumArtist" typeId="albumArtist"/>

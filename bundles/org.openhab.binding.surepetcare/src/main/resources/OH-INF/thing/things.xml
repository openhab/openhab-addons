		<item-type>String</item-type>
		<label>Name</label>
		<description>The name of the thing</description>
		<state readOnly="true" pattern="%s"/>
	</channel-type>

	<channel-type id="commentType">
		<item-type>String</item-type>
		<label>Comment</label>
		<description>Comments about the thing</description>
		<state readOnly="true" pattern="%s"/>
	</channel-type>

